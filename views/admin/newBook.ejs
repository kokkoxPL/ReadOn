<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Dodaj książke</title>
        <link rel="stylesheet" href="/css/index.css" />
        <link rel="stylesheet" href="/css/admin.css" />
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.6.0.min.js"></script>
    </head>
    <body>
        <div class="head">
            <div class="icon-menu" id="menuIcon">
                <div class="blocks">
                    <div class="mEl1, mEl"></div>
                    <div class="mEl2, mEl"></div>
                    <div class="mEl3"></div>
                </div>
            </div>
            <div class="menu">
                <div class="menuList" id="menuList" style="display: none">
                    <div class="toggleMenu">
                        <ul>
                            <li><a href="/admin">Admin</a></li>

                            <li><a href="/admin/new">Dodaj książkę</a></li>

                            <li><a href="/admin/edit">Edytuj książkę</a></li>

                            <li><a href="/admin/delete">Usuń książkę</a></li>

                            <li><a href="/admin/tags">Zarządzaj tagami</a></li>

                            <li><a href="/admin/logout">Wyloguj się</a></li>
                        </ul>
                    </div>
                    <div class="border"></div>
                    <div class="menuChild"></div>
                </div>
            </div>

            <script src="/js/menuAnimation.js"></script>

            <div class="content">
                <% if (msg) { %>
                <h1><%= msg %></h1>
                <script>
                    window.history.pushState({}, document.title, window.location.pathname);
                </script>
                <% } %>

                <div class="addForm">
                    <h1>Dodaj Książkę</h1>
                    <form action="/admin/new" method="post" enctype="multipart/form-data">
                        <input type="text" name="title" placeholder="Title" /><br />
                        <input type="text" name="author" placeholder="Author" /><br />
                        <textarea name="desc" cols="30" rows="10" placeholder="Description"></textarea><br />
                        <input type="file" name="img" accept=".jpg,.jpeg,.png,.gif,.apng,.tiff" /><br />
                        <div class="tags">
                            <% tags.forEach(tag => { %>
                            <label for="<%= tag.name %>">
                                <%= tag.name %>
                                <input
                                    type="checkbox"
                                    class="tag"
                                    name="tags"
                                    id="<%= tag.name %>"
                                    value="<%= tag.name %>"
                                />
                            </label>
                            <% }) %>
                        </div>
                        <button type="submit">Dodaj</button>
                    </form>
                </div>
            </div>
        </div>
        <script>
            $(document).ready(function () {
                $(".tag").click(function () {
                    $(this).parent().toggleClass("selected");
                });
            });
        </script>
    </body>
</html>